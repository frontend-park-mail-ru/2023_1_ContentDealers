<div id="fullscreen-modal">
    <div class="fullscreen-modal">
        <div class="relative-overflow">
            <div class="relative">
                <div class="relative current-background">
                    <div id="video-controls" class="video relative">
                        <div class="video__storage">
                            <div class="video__background"></div>
                            <video id="video-player" autoplay playsinline src="{{ src }}"></video>
                        </div>

                        <div class="video__title-container">
                            <div class="video__title-align">
                                <div class="video__title">
                                    <div class="video-title__text">Петровы в гриппе</div>
                                </div>
                            </div>
                        </div>

                        <div>
                            <div class="video__close-button">
                                <!-- Gradient button (upper to) -->
                            </div>
                        </div>

                        <div>
                            <div class="video__bottom-filter"></div>
                        </div>

                        <div>
                            <div class="video__panel">
                                <div>
<!--                                    <div class="video__bar">-->
<!--                                        <div class="video__bar-padding w-100">-->
<!--                                            <div class="full-bar"></div>-->
<!--                                            <div class="load-bar">-->
<!--                                                <div class="load-bar__progress"></div>-->
<!--                                            </div>-->
<!--                                            <div class="current-bar"></div>-->
<!--                                            <div>-->
<!--                                                <div class="bar-helper">1.35</div>-->
<!--                                            </div>-->
<!--                                            <div>-->
<!--                                                <button class="current-bar-circle"></button>-->
<!--                                            </div>-->
<!--                                        </div>-->
<!--                                    </div>-->
                                </div>
                                <div class="video__bottom-container">
                                    <div class="flex-center">
                                        <div>
                                            <div class="video__play-button">
                                                <!-- Gradient button (upper to) -->
                                            </div>
                                        </div>
                                        <div>
                                            <div class="video__duration-time">00:06 / 02:37</div>
                                        </div>
                                    </div>

                                    <div class="flex-center">
                                        <div class="ml-5 mr-24"> <!-- TODO div with title in -->
                                            <div title="Воспроизводится в HD качестве" class="video__quality">
                                                <img src="/img/icons/player/hd.svg" alt="Воспроизводится в HD качестве">
                                            </div>
                                        </div>

                                        <div class="mr-24">
                                            <div class="flex-center">
                                                <div class="video__icon"> <!-- TODO div with title in -->
                                                    <div title="Выключить / Включить звук" class="video__icon-fill">
                                                        <img src="/img/icons/player/volume-up.svg" alt="Выключить / Включить звук">
                                                    </div>
                                                </div>

                                                <div class="video__bar-padding video__volume-bar">
                                                    <div class="full-bar"></div>
                                                    <div class="load-bar"></div>
                                                    <div class="current-bar"></div>
                                                    <div>
                                                        <div class="bar-helper">46%</div>
                                                    </div>
                                                    <div>
                                                        <button class="current-bar-circle"></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="video__icon">
                                                <div title="Во весь экран" class="video__icon-fill">
                                                    <img src="/img/icons/player/fullscreen.svg" alt="Во весь экран">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
