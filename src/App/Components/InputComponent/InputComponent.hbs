<div class="input-field {{ class }}">
    <input type="{{ type }}" id="{{ id }}" autocomplete={{#if autocomplete}}"on"{{else}}"off"{{/if}} placeholder="{{ placeholder }}" class="input-field__input {{ inputClass }}" {{#if accept}} accept="{{accept}}" {{/if}} />
    {{#if checkboxText }} {{ checkboxText }} {{/if}}
    <div id="{{ id }}-msg" class="input-field__error-msg"></div>
</div>
